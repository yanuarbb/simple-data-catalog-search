# BigQuery Configuration
# Your Google Cloud Platform project ID
GCP_PROJECT_ID=your-project-id

# BigQuery dataset to search for tables
BIGQUERY_DATASET=your-dataset-name

# Path to service account key JSON file (optional)
# If not provided, will use default credentials
SERVICE_ACCOUNT_KEY_PATH=/path/to/service-account-key.json

# Search Engine Configuration
# Sentence transformer model to use for embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Number of top results to return
TOP_K_RESULTS=10

# Cache Configuration
# Directory to store index cache
CACHE_DIR=data/cache

# Whether to use cached index
USE_CACHE=true

# Mock Data Mode
# Set to true to use sample mock data instead of real BigQuery data
# Useful for testing without BigQuery access
USE_MOCK_DATA=false
